# ============================================
# ORBI ULTIMATE V2 - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to Git!

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_TITLE=ORBI Ultimate V2
VITE_APP_ID=orbi-ultimate-v2
VITE_APP_URL=https://hub.orbicitybatumi.com

# Demo Mode (set to false for production)
VITE_USE_DEMO_DATA=false

# ============================================
# DATABASE CONNECTION
# ============================================
# MySQL/TiDB connection string
DATABASE_URL=mysql://user:password@localhost:3306/orbi_db

# Alternative: Separate components
DB_HOST=localhost
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=orbi_db

# ============================================
# ROWS.COM INTEGRATION
# ============================================
# Rows.com Premium account credentials
VITE_ROWS_SPREADSHEET_ID=your_spreadsheet_id_here
VITE_ROWS_API_KEY=your_rows_api_key_here

# Table IDs (get from Rows.com spreadsheet)
VITE_ROWS_CALENDAR_TABLE_ID=your_calendar_table_id
VITE_ROWS_STATUS_TABLE_ID=your_status_table_id
VITE_ROWS_RLIST_CREATED_TABLE_ID=your_rlist_created_table_id
VITE_ROWS_RLIST_CHECKIN_TABLE_ID=your_rlist_checkin_table_id
VITE_ROWS_RLIST_CHECKOUT_TABLE_ID=your_rlist_checkout_table_id
VITE_ROWS_FINANCE_REVENUE_TABLE_ID=your_finance_revenue_table_id
VITE_ROWS_FINANCE_EXPENSES_TABLE_ID=your_finance_expenses_table_id
VITE_ROWS_FINANCE_REPORTS_TABLE_ID=your_finance_reports_table_id

# ============================================
# PYTHON API (OTELMS SYNC)
# ============================================
# OTELMS Channel Manager sync API
VITE_OTELMS_API_URL=https://otelms-api.run.app
OTELMS_API_URL=https://otelms-api.run.app

# OTELMS Credentials (for Python API)
OTELMS_USERNAME=your_otelms_email@example.com
OTELMS_PASSWORD=your_otelms_password
OTELMS_LOGIN_URL=https://116758.otelms.com/login_c2/

# Google Cloud Storage (for Python API snapshots)
GCS_BUCKET=otelms-data

# ============================================
# OBSIDIAN / KNOWLEDGE BASE
# ============================================
# Option 1: Obsidian Publish URL
VITE_KNOWLEDGE_BASE_URL=https://your-obsidian-publish-url.com

# Option 2: Supabase Storage (if using storage)
VITE_KNOWLEDGE_STORAGE_PATH=knowledge-base
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# OAUTH AUTHENTICATION (Manus)
# ============================================
VITE_OAUTH_PORTAL_URL=https://portal.manus.im
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/callback
OAUTH_PROVIDER=manus

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================
# Google Apps Script (if using)
VITE_APPSCRIPT_WEB_APP_URL=https://script.google.com/macros/s/YOUR_ID/exec

# Google Sheets (if using)
VITE_GOOGLE_SHEETS_MASTER_DB=https://docs.google.com/spreadsheets/d/YOUR_ID/pub?output=csv

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Business Profile
GOOGLE_BUSINESS_PROFILE_ID=your_business_profile_id

# ============================================
# AI / LLM CONFIGURATION
# ============================================
# Gemini API (for AI Directors)
GEMINI_API_KEY=your_gemini_api_key
LOVABLE_API_KEY=your_lovable_api_key

# ============================================
# INTEGRATIONS (Optional)
# ============================================
# Tawk.to (Live Chat)
TAWKTO_API_KEY=your_tawkto_api_key
TAWKTO_SITE_ID=your_tawkto_site_id

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# WhatsApp (if using)
WHATSAPP_API_KEY=your_whatsapp_api_key

# ============================================
# STORAGE (Optional)
# ============================================
# AWS S3 (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=orbi-storage

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# SECURITY
# ============================================
# Session secret (generate random string)
SESSION_SECRET=generate-random-secret-here

# JWT secret (generate random string)
JWT_SECRET=generate-random-jwt-secret-here

# ============================================
# NOTES
# ============================================
# 1. Variables starting with VITE_ are exposed to client-side
# 2. Server-side variables (without VITE_) are only available in Node.js
# 3. NEVER commit .env.local or .env to Git
# 4. Always use .env.example as template
# 5. For Vercel: Add variables in Project Settings â†’ Environment Variables
